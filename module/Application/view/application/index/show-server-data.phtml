<script type="text/javascript">
$(document).ready(function(){
  var v_request = $.ajax({
    url: "<?php echo $this->basePath()?>/application/index/get-server-data",
    type: "GET",
    dataType: "json",
  });
  
  v_request.done(
    function(data, status, jqXHRz) {
        for (var key in data) {
            if (data.hasOwnProperty(key)) {
                $('#server').append('<p>' + key + ' ==> ' + data[key] + '</p>');
            }
        }
    }
  );
});
</script>

<div id="server" class="row">
</div>
